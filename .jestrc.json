{
  "testMatch": ["**/tests/_tests.ts"],
  "modulePathIgnorePatterns": ["/lib/"],
  "coverageDirectory": "<rootDir>/.coverage",

  "testEnvironment": "node",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "\\.tsx?$": ["@swc-node/jest", { "sourcemap": "inline" }]
  }
}
